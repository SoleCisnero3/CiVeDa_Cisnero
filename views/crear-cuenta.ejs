<main class="flex justify-center items-center min-h-screen bg-gray-100 p-4">
    <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center font-kalam"><%= nombrePagina %></h1>

        <% if (errores && errores.length > 0) { %>
            <div class="max-w-md mx-auto my-10">
                <% errores.forEach(function(error) { %>
                    <p class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold rounded-lg shadow-md"><%= error.msg %></p>
                <% }); %>
            </div>
        <% } %>
        
        <form action="/crear-cuenta" method="POST" class="space-y-4">
            <div class="space-y-2">
                <label class="block text-gray-700 font-medium">E-mail</label>
                <input type="email" name="email" placeholder="Tu email" value="<%= datos.email ? datos.email : '' %>" class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-naranja focus:border-transparent">
            </div>
            <div class="space-y-2">
                <label class="block text-gray-700 font-medium">Nombre</label>
                <input type="text" name="nombre" placeholder="Tu nombre" value="<%= datos.nombre ? datos.nombre : '' %>" class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-naranja focus:border-transparent">
            </div>
            <div class="space-y-2">
                <label class="block text-gray-700 font-medium">Teléfono</label>
                <input type="number" name="telefono" placeholder="Tu Teléfono" value="<%= datos.telefono ? datos.telefono : '' %>" class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-naranja focus:border-transparent">
            </div>
            <div class="space-y-2">
                <label class="block text-gray-700 font-medium">Contraseña</label>
                <input type="password" name="password" placeholder="Tu Contraseña" class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-naranja focus:border-transparent">
            </div>
            <div class="space-y-2">
                <label class="block text-gray-700 font-medium">Repite tu Contraseña</label>
                <input type="password" name="repetir_password" placeholder="Repite tu contraseña" class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-naranja focus:border-transparent">
            </div>
            <div class="flex justify-center">
                <input class="flex items-center justify-center bg-verde hover:bg-verde-dark text-white font-bold py-3 px-6 rounded-lg shadow-md transition-transform transform hover:scale-105" type="submit" name="enviar" value="Crear Cuenta">
            </div>
        </form>

        <div class="mt-6 text-center">
            <a href="/iniciar-sesion" class="text-verde-dark hover:text-verde hover:underline font-medium transition-colors duration-300">¿Ya tienes una cuenta? Inicia Sesión</a>
        </div>
    </div>
</main>
