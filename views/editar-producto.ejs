<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kalam:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
    <title>Editar Producto</title>
</head>
<body class="bg-gray-100 text-gray-900 font-sans">
    <main class="flex justify-center items-center min-h-screen p-4">
        <div class="w-full max-w-2xl bg-white rounded-lg shadow-lg p-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center font-kalam">Editar Producto</h1>

            <% if (errores && errores.length > 0) { %>
                <div class="max-w-md mx-auto my-10">
                    <% errores.forEach(function(error) { %>
                        <p class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold"><%= error.msg %></p>
                    <% }); %>
                </div>
            <% } %>

            <form method="POST" enctype="multipart/form-data" class="space-y-4">
                <div class="space-y-2">
                    <label class="block text-gray-700 font-medium">Nombre del Producto</label>
                    <input type="text" name="nombre" placeholder="Nombre del Producto" class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-verde focus:border-transparent" value="<%= datos.nombre ? datos.nombre : '' %>">
                </div>
                <div class="space-y-2">
                    <label class="block text-gray-700 font-medium">Descripción</label>
                    <textarea name="descripcion" placeholder="Descripción del Producto" class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-verde focus:border-transparent"><%= datos.descripcion ? datos.descripcion : '' %></textarea>
                </div>
                <div class="space-y-2">
                    <label class="block text-gray-700 font-medium">Precio</label>
                    <input type="number" name="precio" placeholder="Precio del Producto" class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-verde focus:border-transparent" value="<%= datos.precio ? datos.precio : '' %>">
                </div>
                <div class="space-y-2">
                    <label class="block text-gray-700 font-medium">Imagen del Producto</label>
                    <input type="file" name="imagen" class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-verde focus:border-transparent">
                </div>
                <div class="space-y-2">
                    <label class="block text-gray-700 font-medium">Categoría</label>
                    <select name="categoria" class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-verde focus:border-transparent">
                        <option value="" disabled>--Selecciona una categoría--</option>
                        <% categorias.forEach(categoria => { %>
                            <option value="<%= categoria.id %>" <%= datos.categoriaId == categoria.id ? 'selected' : '' %>><%= categoria.nombre %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="text-center">
                    <button type="submit" class="bg-verde hover:bg-verde-dark text-white font-bold py-3 px-6 rounded-lg shadow-md transition-transform transform hover:scale-105">Editar Producto</button>
                </div>
            </form>
        </div>
    </main>
</body>
</html>